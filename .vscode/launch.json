{
    "configurations": [
        {
            "name": "Python: File corrente",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 8889
            },
            "pathMappings": [
                {
                    "localRoot": "c:/your/full/path/to/notebooks/",
                    "remoteRoot": "/home/jovyan/"
                }
            ]
        }
    ]
}